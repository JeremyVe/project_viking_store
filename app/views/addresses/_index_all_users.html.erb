<h2>Addresses</h2>

<p>Create new addresses from within <%= link_to "User", users_path %> profiles</p>

<table class="table">
	<tr>
		<th>Id</th>
		<th>User</th>
		<th>Address</th>
		<th>City</th>
		<th>State</th>
		<th>Orders</th>
		<th>Created</th>
		<th>SHOW</th>
		<th>EDIT</th>
		<th>DELETE</th>
	</tr>

	<% addresses.each do |address| %>
		<tr>
			<td><%= address.id %></td>
			<td><%= link_to "#{address.user.first_name + ' ' + address.user.last_name}", user_path(address.user.id) %></td>
			<td><%= address.street_address %></td>
			<td><%= address.city.name %></td>
			<td><%= address.state.name %></td>
			<td><%= Order.where(shipping_id: address.id).count %></td>
			<td><%= address.created_at %></td>
			<td><%= link_to "show", "#" %></td>
			<td><%= link_to "edit", "#" %></td>
			<td><%= link_to "delete", "#" %></td>
		</tr>
	<% end %>
</table>














