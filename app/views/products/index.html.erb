<h2>Products</h2>

<%= link_to "Add a New Product", "#" , class: "btn btn-primary" %>


<table class="table">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Price</th>
		<th>Category</th>
		<th>SHOW</th>
		<th>EDIT</th>
		<th>DELETE</th>
	</tr>

	<% @products.each do |product| %>
	<tr>
		<td><%= product.id %></td>
		<td><%= product.name %></td>
		<td><%= product.price %></td>
		<td><%= link_to product.cname, category_path(product.cid) %></td>
		<td><%= link_to "SHOW", "#" %></td>
		<td><%= link_to "EDIT", "#" %></td>
		<td><%= link_to "DELETE", "#" %></td>
	</tr>
	<% end %>

</table>	