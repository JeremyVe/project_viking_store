<div class='row'>
	<div class="col-sm-12 text-center">
		<h1>Viking Store Analytics Dashboard</h1>
	</div>

	<!-- Table 1 : Overal Platform -->

	<div class='col-sm-5 col-sm-offset-1'>
		<h3>1. Overall Platform</h3>

		<h3>Total</h3>
		<table class="table table-striped">
			<tr>
				<th>Item</th>
				<th>Data</th>
			</tr>

			<tr>
				<td>Users</td>
				<td><%= @total_users %></td>
			</tr>

			<tr>
				<td>Orders</td>
				<td><%= @total_orders %></td>
			</tr>

			<tr>
				<td>Products</td>
				<td><%= @total_products %></td>
			</tr>

			<tr>
				<td>Revenue</td>
				<td>$ <%= @revenue %></td>
			</tr>

		</table>

		<h3>Last 30 Days</h3>
		<table class="table table-striped">
			<tr>
				<th>Item</th>
				<th>Data</th>
			</tr>

			<tr>
				<td>New Users</td>
				<td><%= @new_users %></td>
			</tr>

			<tr>
				<td>Orders</td>
				<td><%= @new_orders%></td>
			</tr>

			<tr>
				<td>New Products</td>
				<td><%= @new_products %></td>
			</tr>

			<tr>
				<td>Revenue</td>
				<td>$ <%= @revenue_days %></td>
			</tr>

		</table>

		<h3>Last 7 Days</h3>
		<table class="table table-striped">
			<tr>
				<th>Item</th>
				<th>Data</th>
			</tr>

			<tr>
				<td>New Users</td>
				<td><%= @new_users_seven %></td>
			</tr>

			<tr>
				<td>Orders</td>
				<td><%= @new_orders_seven %></td>
			</tr>

			<tr>
				<td>New Products</td>
				<td><%= @new_products_seven %></td>
			</tr>

			<tr>
				<td>Revenue</td>
				<td>$ <%= @revenue_days_seven %></td>
			</tr>

		</table>
	</div>

	<!-- Table 2 : User Demographics and Behavior -->
	<div class='col-sm-5'>
		<h3>2. User Demographics and Behavior</h3>

		<h3>Top 3 States Users Live In (billing)</h3>
		<table class="table table-striped">
			<tr>
				<th>Item</th>
				<th>Data</th>
			</tr>
			<% @top_states.each do |state| %>
			
			<tr>
				<td><%= state.name %></td>
				<td><%= state.total %></td>
			</tr>
			<% end %>

		</table>


		<h3>Top 3 Cities Users Live In (billing)</h3>
		<table class="table table-striped">
			<tr>
				<th>Item</th>
				<th>Data</th>
			</tr>
			<% @top_cities.each do |city| %>
			
			<tr>
				<td><%= city.name %></td>
				<td><%= city.total %></td>
			</tr>
			<% end %>

		</table>


		<h3>Top User With..</h3>
		<table class="table table-striped">
			<tr>
				<th>Criteria</th>
				<th>Customer Name</th>
				<th>Quantity</th>
			</tr>
			
			<tr>
				<td>Highest single order value</td>
				<td><%= "#{@single_highest_value.first.fname} #{@single_highest_value.first.lname}" %></td>
				<td>$ <%= @single_highest_value.first.total %></td>
			</tr>

			<tr>
				<td>Highest Lifetime Value</td>
				<td><%= "#{@highest_lifetime_value.first.fname} #{@highest_lifetime_value.first.lname}" %></td>
				<td>$ <%= @highest_lifetime_value.first.total %></td>
			</tr>

			<tr>
				<td>Most Orders Place</td>
				<td><%= "#{@most_orders_place.first.fname} #{@most_orders_place.first.lname}" %></td>
				<td><%= @most_orders_place.first.total %></td>
			</tr>

		</table>
	</div>


	<!-- Table 3 : Order Statistics -->

	<div class='col-sm-5 col-sm-offset-1'>
		<h3>3. Order Statistics</h3>

		<table class="table table-striped">
			<tr>
				<th>Item</th>
				<th>Data</th>
			</tr>

			<tr>
				<td>New Users</td>
				<td>100</td>
			</tr>

			<tr>
				<td>Orders</td>
				<td>100</td>
			</tr>

			<tr>
				<td>New Product</td>
				<td>100</td>
			</tr>

			<tr>
				<td>Revenue</td>
				<td>100</td>
			</tr>

		</table>
	</div>

	<!-- Table 4 : Time Series Data -->
	<div class='col-sm-5'>
		<h3>4. Time Series Data</h3>

		<table class="table table-striped">
			<tr>
				<th>Item</th>
				<th>Data</th>
			</tr>

			<tr>
				<td>New Users</td>
				<td>100</td>
			</tr>

			<tr>
				<td>Orders</td>
				<td>100</td>
			</tr>

			<tr>
				<td>New Product</td>
				<td>100</td>
			</tr>

			<tr>
				<td>Revenue</td>
				<td>100</td>
			</tr>

		</table>
	</div>
</div>